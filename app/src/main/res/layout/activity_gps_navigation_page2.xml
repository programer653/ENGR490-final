<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gpsXMLL"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".MainActivity">

    <!-- Source EditText and TTS Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/source"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="enter source location" />

        <ImageButton
            android:id="@+id/ttssrc"
            android:layout_width="55dp"
            android:layout_height="62dp"
            android:background="@drawable/tts_foreground" />
    </LinearLayout>

    <!-- Destination EditText and TTS Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/destination"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="enter destination location" />

        <ImageButton
            android:id="@+id/ttsdest"
            android:layout_width="55dp"
            android:layout_height="62dp"
            android:background="@drawable/tts_foreground" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:text="Open Navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
